import pyvisa
import PyQt5.QtWidgets as qtw

#Initiating main window class
class MainWindow(qtw.QWidget):
    def __init__(self):
        super().__init__()
        # Application title in the window
        self.setWindowTitle("Suruga Controller v1.0")

        # Window dimensions and dimensions
        self.setLayout(qtw.QVBoxLayout())

        # Create a label
        my_label = qtw.QLabel("Hello! What's your name?")
        self.layout().addWidget(my_label)

        # Create an entry box
        my_entry = qtw.QLineEdit()
        my_entry.setObjectName("name_field")
        my_entry.setText("")
        self.layout().addWidget(my_entry)

        # Create interactive button
        my_button = qtw.QPushButton("Press Me!!", clicked = lambda: press_it())
        self.layout().addWidget(my_button)

        # Show application
        self.show()

        # Defining interactive button
        def press_it():
            my_label.setText(f"Hello {my_entry.text()}!")
            my_entry.setText("")


#Creating a application and main window
app = qtw.QApplication([])
mw  = MainWindow()


app.exec_()
