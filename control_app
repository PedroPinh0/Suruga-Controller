# -*- coding: utf8 -*-
import sys
from PyQt5.QtGui import QPalette, QColor
from PyQt5.QtWidgets import (
    QApplication,
    QMainWindow,
    QWidget,
    QGridLayout,
    QPushButton,
    QLineEdit,
    QLabel,
    QComboBox,
)

class Color(QWidget):
    def __init__(self, color):
        super(Color, self).__init__()
        self.setAutoFillBackground(True)

        palette = self.palette()
        palette.setColor(QPalette.ColorRole.Window, QColor(color))
        self.setPalette(palette)

class MainWindow(QMainWindow):
    def __init__(self):
        super(MainWindow, self).__init__()

        self.setWindowTitle("Suruga Controller")

        # Parent layout
        OuterLayout = QGridLayout()
        # Arrows layout -- in here are the XY controller
        ArrowsLayout = QGridLayout()
        # Up and Down layout -- z controller
        UpDownLayout = QGridLayout()
        # X options layout -- step size and others
        XLayout = QGridLayout()
        # Y options layout -- step size and others
        YLayout = QGridLayout()
        # Z options layout -- step size and others
        ZLayout = QGridLayout()

        # Adding Widgets for ArrowsLayout
        ArrowsLayout.addWidget(QPushButton("Up"), 0, 1)
        ArrowsLayout.addWidget(QPushButton("Down"), 2, 1)
        ArrowsLayout.addWidget(QPushButton("Left"), 1, 0)
        ArrowsLayout.addWidget(QPushButton("Right"), 1, 2)
        ArrowsLayout.addWidget(QPushButton("Lock X-Y"), 1, 1)

        # Adding Widgets for XLayout
        Step_Box = QLineEdit("Teste")
        Step_Box.setReadOnly(True)
        Unit_Box = QComboBox()
        Unit_Box.addItems([u"Âµm", "cm"])
        XLayout.addWidget(QPushButton("0.01"), 1, 0)
        XLayout.addWidget(QPushButton("0.1"), 1, 1)
        XLayout.addWidget(QPushButton("1"), 1, 2)
        XLayout.addWidget(QPushButton("10"), 2, 0)
        XLayout.addWidget(QPushButton("100"), 2, 1)
        XLayout.addWidget(QPushButton("1000"), 2, 2)
        XLayout.addWidget(QPushButton("CLEAR"), 0, 2, 1, 2)
        XLayout.addWidget(QLabel("X Step is:"), 0, 0, 1, 2)
        XLayout.addWidget(Step_Box, 0, 1)
        XLayout.addWidget(Unit_Box, 3, 1)

        # Nesting all layouts
        OuterLayout.addLayout(ArrowsLayout, 0, 0)
        OuterLayout.addLayout(XLayout, 0, 1)
        OuterLayout.addLayout(YLayout, 0, 2)
        OuterLayout.addLayout(UpDownLayout, 1, 0)
        OuterLayout.addLayout(ZLayout, 1, 1)

        widget = QWidget()
        widget.setLayout(OuterLayout)
        self.setCentralWidget(widget)


app = QApplication(sys.argv)

window = MainWindow()
window.show()

app.exec()
